<%- include("../partials/header") %>

<div class="container">
	<div class="row"><!-- entire form goes into a row -->
		<h1 style="text-align:center" >
			Edit <%= hillstation["name"] %> 
		</h1>
      <div style="width:30% ; margin: 25px auto;">
		<form action="/hillstations/<%=hillstation["_id"] %>?_method=PUT" method="POST">
				
			<div class= "form-group">
					<label for="name">Name</label>
					<input class="form-control" type= "text" id="name" name = "hillstation[name]" value="<%=hillstation["name"]%>">
					
				</div>
			   
			<div class= "form-group">
					<label for="price">Price</label>
					<input class="form-control" type= "number" name = "hillstation[price]" id="price" value ="<%= hillstation["price"] %>" min="0.01" step="0.01" required>
				</div>
			
				<div class= "form-group">
					<label for="image">Image Url</label>
			 <input class="form-control" type="text" name="hillstation[image]" value="<%= hillstation["image"] %>">
				</div>
			
			    <div class= "form-group">
					<label for="description">Description</label>
					<input class="form-control" type= "text" name = "hillstation[description]" id="description" value="<%= hillstation["description"] %>">
				</div>
			
			
				<div class= "form-group">
						<button class="btn btn-primary btn-lg btn-block">
							Update!
						</button>
				</div>
        </form>

		   <a href="/hillstations">Go Back!</a>
	</div>
	</div>	
</div>




<%- include("../partials/footer") %>